<VBox alignment="CENTER" prefHeight="350.0" prefWidth="500.0" spacing="20.0" styleClass="login-background" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.crudjavafx.LoginController">  <stylesheets>
    <URL value="@styles.css" /> </stylesheets>
    <children>
        <GridPane hgap="10.0" prefHeight="270.0" prefWidth="460.0" vgap="15.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="10.0" prefWidth="120.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="250.0" minWidth="10.0" prefWidth="250.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="URL " GridPane.rowIndex="1">
                    <font>
                        <Font name="Century Gothic Bold Italic" size="12.0" />
                    </font>
                </Label>
                <TextField fx:id="txtUrl" promptText="ej: jdbc:postgresql://host:5432/bd_name" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Usuario" GridPane.rowIndex="2">
                    <font>
                        <Font name="Century Gothic Bold Italic" size="12.0" />
                    </font>
                </Label>
                <TextField fx:id="txtUsuario" promptText="Usuario de la base de datos" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label prefHeight="15.0" prefWidth="71.0" text="Contraseña" GridPane.rowIndex="3">
                    <font>
                        <Font name="Century Gothic Bold Italic" size="10.0" />
                    </font>
                </Label>
                <PasswordField fx:id="txtPassword" promptText="Contraseña" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                <Pane prefHeight="40.0" prefWidth="184.0" GridPane.columnIndex="1">
                    <children>
                        <Label alignment="CENTER" contentDisplay="CENTER" layoutX="-51.0" prefHeight="40.0" prefWidth="221.0" text="LOGIN">
                            <font>
                                <Font name="Century Gothic Bold" size="18.0" />
                            </font>
                            <textFill>
                                <LinearGradient endX="1.0" endY="1.0">
                                    <stops>
                                        <Stop>
                                            <color>
                                                <Color red="0.026397010311484337" green="0.5736950635910034" blue="0.6578947305679321" />
                                            </color>
                                        </Stop>
                                        <Stop offset="1.0">
                                            <color>
                                                <Color red="0.351500004529953" green="0.8890954256057739" blue="0.949999988079071" />
                                            </color>
                                        </Stop>
                                    </stops>
                                </LinearGradient>
                            </textFill>
                        </Label>
                    </children>
                </Pane>
            </children>
            <VBox.margin>
                <Insets />
            </VBox.margin>
            <padding>
                <Insets bottom="10.0" left="5.0" right="195.0" top="80.0" />
            </padding>
        </GridPane>
        <Button mnemonicParsing="false" onAction="#ingresar" prefHeight="30.0" prefWidth="120.0" style="-fx-base: #2980b9;" text="Ingresar">
            <font>
                <Font name="Century Gothic Bold" size="14.0" />
            </font>
            <VBox.margin>
                <Insets bottom="10.0" right="190.0" />
            </VBox.margin>
        </Button>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
